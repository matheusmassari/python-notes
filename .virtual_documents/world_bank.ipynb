# Visualiza√ß√£o 1: Compara√ß√£o de PIB per capita
def plot_gdp_per_capita_comparison():
    """Visualiza a compara√ß√£o de PIB per capita entre pa√≠ses desenvolvidos e em desenvolvimento"""
    
    # Filtrar dados v√°lidos
    gdp_data = analysis_df[['PIB per capita (USD)', 'Categoria']].dropna()
    
    # Criar subplots
    fig, axes = plt.subplots(2, 2, figsize=(16, 12))
    fig.suptitle('Disparidades de PIB per capita entre Pa√≠ses Desenvolvidos e em Desenvolvimento', 
                 fontsize=16, fontweight='bold')
    
    # 1. Box plot comparativo
    sns.boxplot(data=gdp_data, x='Categoria', y='PIB per capita (USD)', ax=axes[0,0])
    axes[0,0].set_title('Distribui√ß√£o do PIB per capita por Categoria')
    axes[0,0].set_ylabel('PIB per capita (USD)')
    axes[0,0].yaxis.set_major_formatter(plt.FuncFormatter(lambda x, p: f'${x:,.0f}'))
    
    # 2. Gr√°fico de barras por pa√≠s
    gdp_sorted = gdp_data.sort_values('PIB per capita (USD)', ascending=True)
    colors = ['#2E86AB' if cat == 'Desenvolvido' else '#F24236' for cat in gdp_sorted['Categoria']]
    
    axes[0,1].barh(gdp_sorted.index, gdp_sorted['PIB per capita (USD)'], color=colors)
    axes[0,1].set_title('PIB per capita por Pa√≠s')
    axes[0,1].set_xlabel('PIB per capita (USD)')
    axes[0,1].xaxis.set_major_formatter(plt.FuncFormatter(lambda x, p: f'${x:,.0f}'))
    
    # 3. Histograma
    for category in gdp_data['Categoria'].unique():
        subset = gdp_data[gdp_data['Categoria'] == category]
        axes[1,0].hist(subset['PIB per capita (USD)'], alpha=0.7, label=category, bins=10)
    
    axes[1,0].set_title('Distribui√ß√£o de Frequ√™ncia do PIB per capita')
    axes[1,0].set_xlabel('PIB per capita (USD)')
    axes[1,0].set_ylabel('Frequ√™ncia')
    axes[1,0].legend()
    axes[1,0].xaxis.set_major_formatter(plt.FuncFormatter(lambda x, p: f'${x:,.0f}'))
    
    # 4. Estat√≠sticas comparativas
    stats_data = gdp_data.groupby('Categoria')['PIB per capita (USD)'].agg(['mean', 'median', 'std'])
    axes[1,1].bar(stats_data.index, stats_data['mean'], alpha=0.7, label='M√©dia')
    axes[1,1].bar(stats_data.index, stats_data['median'], alpha=0.7, label='Mediana')
    axes[1,1].set_title('Estat√≠sticas do PIB per capita por Categoria')
    axes[1,1].set_ylabel('PIB per capita (USD)')
    axes[1,1].legend()
    axes[1,1].yaxis.set_major_formatter(plt.FuncFormatter(lambda x, p: f'${x:,.0f}'))
    
    plt.tight_layout()
    plt.show()
    
    # Estat√≠sticas descritivas
    print("Estat√≠sticas do PIB per capita por categoria:")
    print(gdp_data.groupby('Categoria')['PIB per capita (USD)'].describe())
    
    # Teste t para diferen√ßas significativas
    developed = gdp_data[gdp_data['Categoria'] == 'Desenvolvido']['PIB per capita (USD)']
    developing = gdp_data[gdp_data['Categoria'] == 'Em Desenvolvimento']['PIB per capita (USD)']
    
    t_stat, p_value = stats.ttest_ind(developed, developing)
    print(f"\nTeste t para diferen√ßas entre grupos:")
    print(f"Estat√≠stica t: {t_stat:.4f}")
    print(f"Valor p: {p_value:.4f}")
    print(f"Diferen√ßa estatisticamente significativa: {'Sim' if p_value < 0.05 else 'N√£o'}")

# Executar visualiza√ß√£o
plot_gdp_per_capita_comparison()






# An√°lise do √çndice GINI
def analyze_gini_inequality():
    """Analisa a desigualdade de renda usando o √çndice GINI"""
    
    # Filtrar dados v√°lidos
    gini_data = analysis_df[['√çndice GINI', 'PIB per capita (USD)', 'Categoria']].dropna()
    
    # Criar visualiza√ß√µes
    fig, axes = plt.subplots(2, 2, figsize=(16, 12))
    fig.suptitle('An√°lise de Desigualdade de Renda (√çndice GINI)', fontsize=16, fontweight='bold')
    
    # 1. Compara√ß√£o do GINI por categoria
    sns.boxplot(data=gini_data, x='Categoria', y='√çndice GINI', ax=axes[0,0])
    axes[0,0].set_title('Distribui√ß√£o do √çndice GINI por Categoria')
    axes[0,0].set_ylabel('√çndice GINI')
    
    # 2. Correla√ß√£o entre PIB per capita e GINI
    colors = ['#2E86AB' if cat == 'Desenvolvido' else '#F24236' for cat in gini_data['Categoria']]
    
    axes[0,1].scatter(gini_data['PIB per capita (USD)'], gini_data['√çndice GINI'], 
                     c=colors, alpha=0.7, s=100)
    
    # Linha de regress√£o
    from sklearn.linear_model import LinearRegression
    X = gini_data[['PIB per capita (USD)']].values
    y = gini_data['√çndice GINI'].values
    
    reg = LinearRegression().fit(X, y)
    x_line = np.linspace(X.min(), X.max(), 100)
    y_line = reg.predict(x_line.reshape(-1, 1))
    axes[0,1].plot(x_line, y_line, '--', color='black', alpha=0.8)
    
    axes[0,1].set_title('Correla√ß√£o: PIB per capita vs √çndice GINI')
    axes[0,1].set_xlabel('PIB per capita (USD)')
    axes[0,1].set_ylabel('√çndice GINI')
    axes[0,1].xaxis.set_major_formatter(plt.FuncFormatter(lambda x, p: f'${x:,.0f}'))
    
    # 3. Ranking dos pa√≠ses pelo GINI
    gini_sorted = gini_data.sort_values('√çndice GINI', ascending=False)
    colors = ['#2E86AB' if cat == 'Desenvolvido' else '#F24236' for cat in gini_sorted['Categoria']]
    
    axes[1,0].barh(range(len(gini_sorted)), gini_sorted['√çndice GINI'], color=colors)
    axes[1,0].set_yticks(range(len(gini_sorted)))
    axes[1,0].set_yticklabels(gini_sorted.index, fontsize=10)
    axes[1,0].set_title('Ranking de Pa√≠ses por √çndice GINI')
    axes[1,0].set_xlabel('√çndice GINI')
    
    # 4. Distribui√ß√£o de frequ√™ncia do GINI
    for category in gini_data['Categoria'].unique():
        subset = gini_data[gini_data['Categoria'] == category]
        axes[1,1].hist(subset['√çndice GINI'], alpha=0.7, label=category, bins=8)
    
    axes[1,1].set_title('Distribui√ß√£o de Frequ√™ncia do √çndice GINI')
    axes[1,1].set_xlabel('√çndice GINI')
    axes[1,1].set_ylabel('Frequ√™ncia')
    axes[1,1].legend()
    
    plt.tight_layout()
    plt.show()
    
    # Estat√≠sticas
    print("Estat√≠sticas do √çndice GINI por categoria:")
    print(gini_data.groupby('Categoria')['√çndice GINI'].describe())
    
    # Correla√ß√£o
    correlation = gini_data['PIB per capita (USD)'].corr(gini_data['√çndice GINI'])
    print(f"\nCorrela√ß√£o entre PIB per capita e √çndice GINI: {correlation:.4f}")
    
    # Teste t para diferen√ßas no GINI
    developed_gini = gini_data[gini_data['Categoria'] == 'Desenvolvido']['√çndice GINI']
    developing_gini = gini_data[gini_data['Categoria'] == 'Em Desenvolvimento']['√çndice GINI']
    
    t_stat, p_value = stats.ttest_ind(developed_gini, developing_gini)
    print(f"\nTeste t para diferen√ßas no GINI entre grupos:")
    print(f"Estat√≠stica t: {t_stat:.4f}")
    print(f"Valor p: {p_value:.4f}")
    print(f"Diferen√ßa estatisticamente significativa: {'Sim' if p_value < 0.05 else 'N√£o'}")

# Executar an√°lise
analyze_gini_inequality()






